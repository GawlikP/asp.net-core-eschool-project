
@{
    ViewData["Title"] = "Students";
}

<h1>Students</h1>

@model IEnumerable<lista_7.Models.User>

<div class="container border">
    <a class="btn btn-success text-white" asp-controller="Account" asp-action="Create">Crate Account</a>
    @if (Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    <label>Username</label>
                </th>
                <th>
                    <label>Email</label>
                </th>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>LastName</label>
                </th>
               
                <th>
                    <label>Role</label>
                </th>
                <th>
                    <label>Grades</label>
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.LastName)
                    </td>
                   
                    <td>
                        @{
                            String role_name = ViewData[item.Id.ToString()].ToString();
                        }
                        @role_name
                    </td>
                    <td>
                        
                        <a asp-area="" asp-controller="Grades" asp-action="StudentIndex" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Grades</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p class="text-warning"><b> No Accounts To Show </b></p>
    }
</div>

