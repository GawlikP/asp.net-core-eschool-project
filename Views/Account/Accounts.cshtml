@model IEnumerable<lista_7.Models.User>
@{
    ViewData["Title"] = "Accounts";
}

<h1>Accounts List</h1>
<div class="container border">
    <a class="btn btn-success text-white" asp-controller="Account" asp-action="Create">Crate Account</a>
    @if(Model.Count() > 0)
    {
        <table class="table table-striped border">
            <tr class="table-secondary">
                <th>
                    <label>Username</label>
                </th>
                <th>
                    <label>Email</label>
                </th>
                <th>
                    <label>Name</label>
                </th>
                <th>
                    <label>LastName</label>
                </th>
                <th>
                    <label>Password</label>
                </th>
                <th>
                    <label>Role</label>
                </th>
                <th>

                </th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.Username)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Password)
                    </td>
                    <td>
                        @{ 
                            String role_name = ViewData[item.Id.ToString()].ToString();
                        }
                        @role_name
                    </td>
                    <td>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="if(confirm('Are you sure you want to delete?'))location.href='@Url.Action("Delete", "Account", new { id = item.Id})'" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-area="" asp-controller="Account" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p class="text-warning"><b> No Accounts To Show </b></p>
    }
</div>

