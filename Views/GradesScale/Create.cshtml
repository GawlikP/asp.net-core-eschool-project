@model lista_7.Models.GradeScale
@{
    ViewData["Title"] = "Create";
}

<h1>Create GradeScale </h1>
<div class="container border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="UpBorder"></label>
            </div>
            <div class="col-6">
                <input asp-for="UpBorder" class="form-control" />
                <span asp-validation-for="UpBorder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DownBorder"></label>
            </div>
            <div class="col-6">
                <input asp-for="DownBorder" class="form-control" />
                <span asp-validation-for="DownBorder" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="AllowHalfGrades"></label>
            </div>
            <div class="col-6">
                <select name="allowHalf" class="form-control">
                    <option value="0">Yes</option>
                    <option value="1">No</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </form>
</div>

