@model lista_7.Models.Subject
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container border">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Teacher"></label>
            </div>
            <div class="col-6">
                <select class="form-control" name="userId" id="userId">
                    @{
                        string t = ViewData["Teachers"].ToString();
                        var temp = t.Split(',');
                        t = ViewData["Teachers_ids"].ToString();
                        var temp2 = t.Split(',');
                        for (int i = 0; i < temp.Length; i++)
                        {
                            if (temp2[i] != ViewData["ActualId"].ToString()) {<option value="@temp2[i]">@temp[i]</option>}
                            else
                            {
                                <option selected value="@temp2[i]">@temp[i]</option>
                            }
                        }
                        }
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Edit" class="btn btn-primary form-control" />
            </div>
        </div>
    </form>
