@model IEnumerable<Subject>
@{
    ViewData["Title"] = "Index";
}

<h1>Subjects Lists</h1>
<div class="container border">
    <a class="btn btn-success text-white" asp-controller="Subject" asp-action="Create">Crate Account</a>
@if(Model.Count() > 0)
{
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Teacher</label>
            </th>
            <th>
                <label>Grades</label>
            </th>
        </tr>
        @foreach(var sub in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m =>sub.Name)
                </td>
                <td>
                    @ViewData[sub.Id.ToString()]
                </td>
                <td>
                   <button asp-page-handler="Delete" asp-route-id="@sub.Id" onclick="if(confirm('Are you sure you want to delete?'))location.href='@Url.Action("Delete", "Subject", new { id = sub.Id })'" class="btn btn-danger btn-sm">Delete</button>
                    <a asp-area="" asp-controller="Subject" asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-success btn-sm text-white">Edit</a>
                </td>
            </tr>
        }
    </table>
}
else
{

    <p>No subjects to Show</p>
}

</div>

